%h1 Listing items

%table
  %thead
    %tr
      %th User
      %th Title
      %th Details
      %th Price
      %th
      %th
      %th

  %tbody
    - @items.each do |item|
      %tr
        %td= item.user.email
        %td= item.title
        %td= item.details
        %td= item.price
        %td= link_to 'Show', item
        - if item.user_id == current_user.id
          %td= link_to 'Edit', edit_item_path(item)
          %td= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Item', new_item_path
