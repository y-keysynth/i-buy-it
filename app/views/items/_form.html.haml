= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :details
    = f.text_area :details
  .field
    = f.label :price
    = f.number_field :price
  -# .field
  -#   = f.label :user_id
  -#   = f.number_field :user_id
  .actions
    = f.submit 'Save'
