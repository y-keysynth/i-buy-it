#wrapper
  .main
    .main__list
      .main__list__page-title
        「買います」募集の詳細
      .item-box
        .item-box__name.margin-bottom-10
          = @item.user.email

        - if @item.seller_id != nil
          .triangle
          .item-box__day
            = @item.created_at.to_s(:datetime_jp)
          .item-box__title
            = @item.title
          .item-box__price
            = @item.price
            円
          .item-box__details
            = @item.details
        - else
          .item-box__day
            = @item.created_at.to_s(:datetime_jp)
          .item-box__title
            「
            = @item.title
            」を買います！！
          .item-box__price
            = @item.price
            円
          .item-box__details
            = @item.details
            
          - if @item.seller_id != nil
            %p
              売買成立
          - elsif current_user == nil
          - elsif @item.seller_id == nil and current_user.id != @item.user_id
            = form_for @item do |f|
              = f.hidden_field :seller_id, value: current_user.id
              %p
                = f.submit '売ります', data: { confirm: ' 本当に売りますか?' }
          - elsif current_user.id == @item.user_id
            = link_to '編集', edit_item_path(@item)
          - else
        \|
        = link_to '戻る', items_path

    .main__side-menu
      = render 'side-menu'
