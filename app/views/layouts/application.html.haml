!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title IBuyIt
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    #wrapper
      .header
        .header__brand
          %span.size18 [Sample Application]
          %span.size16 - I buy it -
          = search_form_for @search, url: items_path do |f|
            = f.text_field :title_or_details_cont, placeholder: 'キーワードを入力...'
            = f.submit ("検索する")



        .header__l-header
          .header-container
            .head-my-character
              - if user_signed_in?
                .head-my-character__name
                  = current_user.name
                .head-my-character__status
                  = link_to "ログアウト", logout_path
              - else
                .head-my-character__name
                  = link_to "ログイン", login_path
                .head-my-character__status
                  = link_to "新規登録", signup_path
        .header__main-nav
          #notice= notice

    = yield

